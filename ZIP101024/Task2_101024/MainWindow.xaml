<Window x:Class="Task2_101024.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2_101024"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <!-- Текстовое поле для ввода текста -->
        <TextBox x:Name="InputTextBox" Width="300" Margin="0,0,0,10" />

        <!-- Кнопка для добавления текста в WrapPanel -->
        <Button x:Name="button_Add" Content="Добавить текст" Click="AddTextButton_Click" Margin="0,0,0,10" />

        <!-- WrapPanel для отображения добавленного текста -->
        <WrapPanel x:Name="TextWrapPanel" Background="LightGray" Margin="0,0,0,10" Orientation="Vertical"/>

        <!-- Кнопка для очистки WrapPanel -->
        <Button Content="Очистить" Click="ClearWrapPanelButton_Click" />
    </StackPanel>
</Window>
